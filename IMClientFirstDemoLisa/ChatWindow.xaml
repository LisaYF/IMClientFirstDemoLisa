<Window x:Class="IMClientFirstDemoLisa.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMClientFirstDemoLisa"
        mc:Ignorable="d"
        Title="ChatWindow" Height="300" Width="300" Closed="Window_Closed">
    <Grid>
        <!--Lisa-->
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0" Color="Blue"></GradientStop>
                <GradientStop Offset="0.7" Color="LightCyan"></GradientStop>
            </LinearGradientBrush>
        </Grid.Background>
        <!--Lisa-->
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="rtbReceiveMes" Grid.Row="0"></RichTextBox>
        <TextBox x:Name="rtbSendMes" Grid.Row="2"></TextBox>
        <StackPanel Grid.Row="3">
            <Button x:Name="btnSend" HorizontalAlignment="Left" Content="发送" Margin="264,0,0,0" Click="btnSend_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
